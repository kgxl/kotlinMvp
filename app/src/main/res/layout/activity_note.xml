<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rela_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjy.kotlinnote.koitlinnote.activity.NoteActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <EditText
        android:id="@+id/note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb"
        android:layout_margin="10dp"
        android:background="@drawable/shape_edit_bg"
        android:hint="@string/note_hint_title"
        android:maxLength="10"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/note_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_title"
        android:layout_margin="10dp"
        android:background="@drawable/shape_edit_bg"
        android:hint="@string/note_hint_type"
        android:maxLength="5"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/note_type"
        android:layout_margin="10dp"
        android:background="@drawable/shape_edit_bg"
        android:gravity="start"
        android:hint="@string/note_hint_content"
        android:padding="10dp"/>
</RelativeLayout>
